<script>
    $(document).ready(function(){
        console.log("one");
        waitABit(1000);
        setTimeout( () => {
            $("#dojologo").fadeIn(4000);
            $("#meanlogo").fadeIn(4000);
            waitABit(6000);
            setTimeout( () => {
                $("#line1div").fadeIn(4000);
                console.log("two");
                waitABit(6000);
                setTimeout( () => {
                    $("#line1div").fadeIn(4000);
                    console.log("three");
                    waitABit(6000);
                    setTimeout( () => {
                        $("#line2div").fadeIn(4000);
                        console.log("four");
                        waitABit(6000);
                        setTimeout( () => {
                            $("#line3adiv").fadeIn(4000);
                            $("#line3bdiv").fadeIn(4000);
                            console.log("five");
                            waitABit(6000);
                            setTimeout( () => {
                                $("#btnstart").fadeIn(4000);
                            }, 6000);
                        }, 3000);
                    }, 3000);
                }, 3000);
            }, 3000);
        }, 1000);
    });


    function waitABit(ms) {
        setTimeout( () => {}, ms);
    }
</script>


