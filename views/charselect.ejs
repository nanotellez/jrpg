<!DOCTYPE html>
<html lang="en">
<head>
<title>JRPG</title>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

<link rel="stylesheet" href="./css/selectstyles.css">

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<!-- Popper JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</head>
<body>
    <audio autoplay loop>
        <source src="./media/opening.mp3" type="audio/mpeg">
        Your browser does not support the audio element.
    </audio>
    <div class="container-fluid">
        <div id="carouselCharacters" class="carousel slide" data-ride="carousel">
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            <ol class="carousel-indicators">
                <li data-target="#carouselCharacters" data-slide-to="0" class="active"></li>
                <li data-target="#carouselCharacters" data-slide-to="1"></li>
                <li data-target="#carouselCharacters" data-slide-to="2"></li>
                <li data-target="#carouselCharacters" data-slide-to="3"></li>
                <li data-target="#carouselCharacters" data-slide-to="4"></li>
                <li data-target="#carouselCharacters" data-slide-to="5"></li>
                <li data-target="#carouselCharacters" data-slide-to="6"></li>
                <li data-target="#carouselCharacters" data-slide-to="7"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" id="slide01" data_id="1" src="./img/male-warrior-01.png" alt="Male Warrior 01">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Male Warrior 01</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" id="slide02" data_id="2" src="./img/female-warrior-01.png" alt="Female Warrior 01">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Female Warrior 01</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" id="slide03" data_id="3" src="./img/male-warrior-02.png" alt="Male Warrior 02">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Male Warrior 02</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" id="slide04" data_id="4" src="./img/female-warrior-02.png" alt="Female Warrior 02">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Female Warrior 02</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" id="slide05" data_id="5" src="./img/male-warrior-03.png" alt="Male Warrior 03">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Male Warrior 03</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" id="slide06" data_id="6" src="./img/female-warrior-03.png"  alt="Female Warrior 03">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Female Warrior 03</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" id="slide07" data_id="7" src="./img/male-warrior-04.png" alt="Male Warrior 04">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Male Warrior 04</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" id="slide08" data_id="8" src="./img/female-warrior-04.png" alt="Female Warrior 04">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Female Warrior 04</h5>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselCharacters" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselCharacters" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div style="text-align:center">
            <form action="/world" method="GET">
                <!-- <input type="hidden" name="currentId" id="currentId"> -->
                <input type="submit" value="Select Character" class="btn btn-lg border border-info">
            </form>
        </div>
    </div>

    <script>
        $(document).ready(function(){
            console.log("PAGE LOADED");
            console.log("Active Slide: ", document.getElementById("slide01").getAttribute("data_id"));
            data_id = document.getElementById("slide01").getAttribute("data_id");
        });

        $('#carouselCharacters').on('slid.bs.carousel', function (event) {
            console.log("Characters SLIDE COMPLETED");
            console.log("slide0" + String(event.to + 1));
            console.log(document.getElementById("slide0" + String(event.to + 1)).getAttribute("data_id"));
            data_id = document.getElementById("slide0" + String(event.to + 1)).getAttribute("data_id");
            $('#currentId').val(String(data_id));
        });
    </script>

</body>
</html>
